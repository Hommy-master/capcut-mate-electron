{
  "name": "capcut-mate",
  "version": "1.0.0",
  "description": "剪映小助手，用于下载剪映草稿",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^36.8.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.gogoshine.capcut-mate",
    "productName": "剪映小助手",
    "win": { "target": "nsis" },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.productivity"
    },
    "publish": false
  },
  "author": "gogoshine",
  "license": "MIT"
}
