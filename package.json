{
  "name": "capcut-mate",
  "version": "1.0.0",
  "description": "剪映小助手，用于下载剪映草稿",
  "main": "main.js",
  "scripts": {
    "start": "electron --enable-logging --v=1 .",
    "build-win": "electron-packager . CapCut-Mate --platform=win32 --arch=x64 --out=dist --overwrite --icon=resources/icon/logo.ico",
    "build-mac": "electron-packager . CapCut-Mate --platform=darwin --arch=arm64 --out=dist --overwrite --icon=resources/icon/logo.icns",
    "build-win-installer": "electron-builder --win nsis --x64 --config electron-builder.config.js --publish never",
    "build-mac-installer": "electron-builder --mac --arm64 --config electron-builder.config.js --publish never"
  },
  "devDependencies": {
    "electron": "31.7.6",
    "electron-builder": "^24.13.3",
    "@electron/packager": "^18.3.5"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  },

  "author": "gogoshine",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "electron-download-manager": "^2.1.2",
    "log4js": "^6.9.1"
  }
}